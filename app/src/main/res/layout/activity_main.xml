<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/botonInventario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:drawableLeft="@drawable/abrir"
        android:padding="20dp"
        android:text="ACCESO INVENTARIO" />

    <Button
        android:id="@+id/botonVentas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/botonInventario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/abrir"
        android:padding="20dp"
        android:text="ACCESO VENTAS" />
    <Button
        android:id="@+id/botonReportes"
        android:drawableLeft="@drawable/abrir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/botonVentas"
        android:layout_centerHorizontal="true"
        android:text="ACCESO A REPORTES"
        android:layout_marginTop="30dp"
        android:padding="20dp"/>
</RelativeLayout>